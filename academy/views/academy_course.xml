?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="spachesip_view_form" model="ir.ui.view">
            <field name="name">academy.course.form</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <field name="description"/>
                                </page>
                                <page string="Sessions">
                                    <field name="session_ids"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="spachesip_view_tree" model="ir.ui.view">
            <field name="name">academy.course.list</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <tree string="Spaceship List Lista">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="spachesip_view_search" model="ir.ui.view">
            <field name="name">academy.course.search</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <search string="Spaceship List Lista">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record id="spachesip_view_graph" model="ir.ui.view">
            <field name="name">academy.course.graph</field>
            <field name="model">academy.course</field>
            <field name="arch" type="xml">
                <graph string="Spaceship">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="description"/>
                </graph>
            </field>
        </record>
    </data>
</odoo>