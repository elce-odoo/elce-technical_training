<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="moon_project_wizard_view">
            <field name="name">moon.project.wizard.form</field>
            <field name="model">moon.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create project from mission">
                    <group>
                        <field name="mission_id"/>
                        <field name="mission_crew_ids" invisible="1"/>
                        <field name="crew_ids" domain="[('id', 'in', 'mission_crew_ids')]"/>
                    </group>
                    <footer>
                        <button name="create_projects" type="object" string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
