<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="moon_project_wizard_view">
            <field name="name">moon.project.wizard.form</field>
            <field name="model">moon.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create project">
                    <group>
                        <field name="mission_id"/>
                    </group>
                    <footer>
                        <button name="create_projects" type="object" string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="internal_transfer_action_view_wizard" model="ir.actions.act_window">
            <field name="name">Create Project</field>
            <field name="res_model">moon.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="odoo_moon.model_moon_mission"/>
            <field name="binding_view_types">form</field>
        </record>
    </data>
</odoo>