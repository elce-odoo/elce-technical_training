<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="moon_project_wizard_view">
            <field name="name">moon.project.wizard.form</field>
            <field name="model">moon.project.wizard</field>
            <field name="arch" type="xml">
                <form string="Create project from mission">
                    <group>
                        <field name="mission_id"/>
                        <field name="mission_crew_ids" invisible="1"/>
                        <field name="crew_ids" domain="[('id', 'in', 'mission_crew_ids')]"/>
                    </group>
                    <footer>
                        <button name="create_projects" type="object" string="Create" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="launch_project_wizard">
            <field name="name">Create Project</field>
            <field name="type">ir.actions.act_window</field>
            <!-- <field name="binding_model">moon.mission</field> -->
            <field name="res_model">moon.project.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- <act_window id="launch_project_wizard"
                    name="Create project"
                    binding_model="moon.mission"
                    res_model="moon.project.wizard"
                    view_mode="form"
                    target="new"/> -->
    </data>
</odoo>