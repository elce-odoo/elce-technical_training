<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="spachesip_view_form" model="ir.ui.view">
            <field name="name">moon.spaceship.form</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="height"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <field name="description"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="spachesip_view_tree" model="ir.ui.view">
            <field name="name">moon.spaceship.form</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <tree string="Spaceship List Lista" decoration-info="active == 'True'">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="height"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="spachesip_view_search" model="ir.ui.view">
            <field name="name">moon.spaceship.form</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <search string="Spaceship List Lista">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="height"/>
                    <field name="description"/>
                </search>
            </field>
        </record>
    </data>
</odoo>