<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="spachesip_view_form" model="ir.ui.view">
            <field name="name">moon.spaceship.form</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <form string="Spaceship Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="active"/>
                                <field name='owner'/>
                                <field name='state'/>
                            </group>
                            <group>
                                <field name="height"/>
                                <field name="width"/>
                            </group>
                            <group>
                                <notebook>
                                    <page string="Description">
                                        <field name="description"/>
                                    </page>
                                </notebook>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="spachesip_view_tree" model="ir.ui.view">
            <field name="name">moon.spaceship.list</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <tree string="Spaceship List Lista">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="height"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="spachesip_view_search" model="ir.ui.view">
            <field name="name">moon.spaceship.search</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <search string="Spaceship List Lista">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="height"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record id="spachesip_view_search" model="ir.ui.view">
            <field name="name">moon.spaceship.graph</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <graph string="Spaceship">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="volume"/>
                    <field name="description"/>
                </graph>
            </field>
        </record>

        <record id="spachesip_view_search" model="ir.ui.view">
            <field name="name">moon.spaceship.graph</field>
            <field name="model">moon.spaceship</field>
            <field name="arch" type="xml">
                <dashboard string="Spaceship">
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="volume"/>
                    </group>
                </dashboard>
            </field>
        </record>
    </data>
</odoo>