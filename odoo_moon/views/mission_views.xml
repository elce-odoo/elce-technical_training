<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record id="mission_view_form" model="ir.ui.view">
            <field name="name">moon.mission.form</field>
            <field name="model">moon.mission</field>
            <field name="arch" type="xml">
                <form string="Mission Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="destination"/>
                                <field name='active'/>
                                <field name='spaceship_id'/>
                            </group>
                            <group>
                                <field name="crew_ids"/>
                            </group>
                        </group>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mission_view_tree" model="ir.ui.view">
            <field name="name">moon.mission.list</field>
            <field name="model">moon.mission</field>
            <field name="arch" type="xml">
                <tree string="Missions">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="destination"/>
                    <field name="crew_ids"/>
                </tree>
            </field>
        </record>

        <record id="smission_view_search" model="ir.ui.view">
            <field name="name">moon.mission.search</field>
            <field name="model">moon.mission</field>
            <field name="arch" type="xml">
                <search string="Missions">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="destination"/>
                    <field name="crew_ids"/>
                </search>
            </field>
        </record>
    </data>
</odoo>