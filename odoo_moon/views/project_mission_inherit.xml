<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>
        <record model="ir.ui.view" id="view_project_form_inherit_moon">
            <field name="name">project.project.form.inherit.moon</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.view_project_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_start']" position="after">
                    <field name="mission_id"/>
                    <field name="spaceship"/>
                </xpath>

                <field name="partner_id" position="before">
                    <field name="leader_id"/>
                </field>

                <xpath expr="//sheet//notebook" position="inside">
                    <page string="Crew" attrs="{'invisible':[('mission_id', '=', False)]}">
                        <field name="crew_ids">
                            <tree>
                                <field name="name"/>
                                <field name="phone"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>